@page "/"
@using DigitalButler.Context
@inject ContextService ContextService
@inject InstructionService InstructionService
@inject ISummarizationService Summarizer
@inject TimeZoneService TimeZoneService
@inject IManualSyncRunner ManualSyncRunner

<PageTitle>Dashboard</PageTitle>

<div class="content">
    <h3 class="title is-3">Dashboard</h3>
    <p class="subtitle is-6">Quick access to admin tools and recent context.</p>
</div>

<div class="box">
    <div class="content">
        <h5 class="title is-5">Quick Links</h5>
    </div>
    <div class="buttons">
        <a class="button" href="/context">Context</a>
        <a class="button" href="/instructions">Instructions</a>
        <a class="button" href="/schedules">Schedules</a>
        <a class="button" href="/ai-settings">AI Settings</a>
        <a class="button" href="/google-calendar">Google Calendar</a>
        <a class="button" href="/gmail">Gmail</a>
    </div>

    <div class="block"></div>
    <div class="buttons">
        <button class="button is-link" type="button" disabled="@_syncing" @onclick="RunSyncAsync">
            @if (_syncing)
            {
                <span>Syncing…</span>
            }
            else
            {
                <span>Run sync now</span>
            }
        </button>

        <button class="button is-primary is-light" type="button" disabled="@_dailyRunning" @onclick="RunDailySummaryAsync">
            @if (_dailyRunning)
            {
                <span>Daily…</span>
            }
            else
            {
                <span>Test daily</span>
            }
        </button>

        <button class="button is-primary is-light" type="button" disabled="@_weeklyRunning" @onclick="RunWeeklySummaryAsync">
            @if (_weeklyRunning)
            {
                <span>Weekly…</span>
            }
            else
            {
                <span>Test weekly</span>
            }
        </button>
    </div>

    @if (!string.IsNullOrWhiteSpace(_syncMessage))
    {
        <div class="notification is-info is-light">@_syncMessage</div>
    }

    @if (!string.IsNullOrWhiteSpace(_summaryMessage))
    {
        <div class="notification is-info is-light" style="white-space:pre-wrap; overflow-wrap:anywhere;">@_summaryMessage</div>
    }
</div>

<div class="box">
    <div class="content">
        <h5 class="title is-5">Recent Context</h5>
    </div>
@if (_recent is null)
{
    <p>Loading...</p>
}
else if (_recent.Count == 0)
{
    <p>No context yet.</p>
}
else
{
    <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable is-narrow">
            <thead><tr><th>Source</th><th>Title</th><th>Updated</th></tr></thead>
            <tbody>
            @foreach (var item in _recent.Take(10))
            {
                <tr>
                    <td style="white-space:nowrap;">@item.Source</td>
                    <td>@item.Title</td>
                    <td style="white-space:nowrap;">@item.UpdatedAt.LocalDateTime</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

</div>

@code {
    private List<ContextItem>? _recent;

    private bool _syncing;
    private string? _syncMessage;

    private bool _dailyRunning;
    private bool _weeklyRunning;
    private string? _summaryMessage;

    protected override async Task OnInitializedAsync()
    {
        _recent = await ContextService.GetRecentAsync(take: 20);
    }

    private async Task RunSyncAsync()
    {
        _syncing = true;
        _syncMessage = null;
        try
        {
            var result = await ManualSyncRunner.RunAllAsync();
            _syncMessage = $"Sync finished in {(result.FinishedAt - result.StartedAt).TotalSeconds:0.#}s. " +
                           $"Updaters: {result.UpdatersRun}, Failures: {result.Failures}.";

            // refresh dashboard list after sync
            _recent = await ContextService.GetRecentAsync(take: 50);
        }
        finally
        {
            _syncing = false;
        }
    }

    private async Task RunDailySummaryAsync()
    {
        _dailyRunning = true;
        _summaryMessage = null;
        try
        {
            var tz = await TimeZoneService.GetTimeZoneInfoAsync();
            var items = await GetDailyItemsAsync(tz);
            var sources = items.Select(x => x.Source).Distinct().ToArray();
            var instructionsBySource = await InstructionService.GetBySourcesAsync(sources);
            var summary = await Summarizer.SummarizeAsync(items, instructionsBySource, "on-demand-daily", CancellationToken.None);
            _summaryMessage = string.IsNullOrWhiteSpace(summary) ? "No summary available." : summary;
        }
        finally
        {
            _dailyRunning = false;
        }
    }

    private async Task RunWeeklySummaryAsync()
    {
        _weeklyRunning = true;
        _summaryMessage = null;
        try
        {
            var tz = await TimeZoneService.GetTimeZoneInfoAsync();
            var items = await GetWeeklyItemsAsync(tz);
            var sources = items.Select(x => x.Source).Distinct().ToArray();
            var instructionsBySource = await InstructionService.GetBySourcesAsync(sources);
            var summary = await Summarizer.SummarizeAsync(items, instructionsBySource, "on-demand-weekly", CancellationToken.None);
            _summaryMessage = string.IsNullOrWhiteSpace(summary) ? "No summary available." : summary;
        }
        finally
        {
            _weeklyRunning = false;
        }
    }

    private Task<List<ContextItem>> GetDailyItemsAsync(TimeZoneInfo tz)
    {
        var nowUtc = DateTimeOffset.UtcNow;
        var localNow = TimeZoneInfo.ConvertTime(nowUtc, tz);

        var localStart = new DateTime(localNow.Year, localNow.Month, localNow.Day, 0, 0, 0, DateTimeKind.Unspecified);
        var startUtc = TimeZoneInfo.ConvertTimeToUtc(localStart, tz);
        var endUtc = TimeZoneInfo.ConvertTimeToUtc(localStart.AddDays(1), tz);

        return ContextService.GetForWindowAsync(new DateTimeOffset(startUtc, TimeSpan.Zero), new DateTimeOffset(endUtc, TimeSpan.Zero), take: 300);
    }

    private Task<List<ContextItem>> GetWeeklyItemsAsync(TimeZoneInfo tz)
    {
        var nowUtc = DateTimeOffset.UtcNow;
        var localNow = TimeZoneInfo.ConvertTime(nowUtc, tz);

        var localTodayStart = new DateTime(localNow.Year, localNow.Month, localNow.Day, 0, 0, 0, DateTimeKind.Unspecified);
        var diff = ((7 + (int)localNow.DayOfWeek - (int)DayOfWeek.Monday) % 7);
        var localWeekStart = localTodayStart.AddDays(-diff);
        var localWeekEnd = localWeekStart.AddDays(7);

        var weekStartUtc = TimeZoneInfo.ConvertTimeToUtc(localWeekStart, tz);
        var weekEndUtc = TimeZoneInfo.ConvertTimeToUtc(localWeekEnd, tz);

        return ContextService.GetForWindowAsync(new DateTimeOffset(weekStartUtc, TimeSpan.Zero), new DateTimeOffset(weekEndUtc, TimeSpan.Zero), take: 500);
    }
}
